  script.
    var base = location.pathname.replace(/\/[^/]+$/, '');
    var dojoConfig = {
      parseOnLoad: false,
      async: true,
      cacheBust: 'version',
      packages: [
        { name: 'js', location: base + 'js' }
      ],
      deps: [
        'js/story',
        'dojo/domReady!'
      ],
      callback: function (story) {}
    };

//     color red

// Require any Map Content
@require '_modal'
@require '_alertsModal'
@require '_layerPanel'
@require '_controlPanel'
@require '_analysisPanel'
@require '_timeline'

// Media Queries for All Map Content
@media (min-width: 850px)
  .layout-content
    top 34px


@require 'rupture'
@require '_config'
// Important Layout Classes
body
  overflow hidden

.layout-content
  position absolute
  height auto
  width 100%
  bottom 0
  left 0
  top 0

#footerGfw
  display none

.map
  height 100%
  width 100%

.map-component
  position absolute
  z-index 5

.gfw-water-logo
  background url('images/GFW_Water_logo.png') no-repeat center
  background-size 90px
  position absolute
  height 90px
  width 90px
  z-index 5
  left 20px
  top 0
  &:after
    background url('images/beta.png')
    position absolute
    display block
    bottom -5px
    height 18px
    width 30px
    right -5px
    content ''

.imagery-row
  color black
  &.selected
    color red

.imagery-data
  cursor pointer
  width 40%
  padding 3px
  &.right
    margin-left 10px
//   color black
//   font-size 14px
//   &.selected
//     color red

.fire-popup-list
  padding-top 10px
	padding-bottom 10px
  &.no-fires
    padding-top 5px
    padding-bottom 5px
    color #BF0000

.fire-popup-list.no-fires
  padding-top 5px
  padding-bottom 5px
  color #BF0000

.fire-pop-item-cont
	margin 0 auto
	text-align center
	padding-top	5px

	.fire-pop-item
		cursor pointer
		display inline-block
		margin 0px auto
		text-align center
		margin 4px
		border rgb(233, 131, 0) 2px solid
		padding 3px
		height 40px
		width 45px

		&.selected
			background-color rgb(236, 197, 61)
			color white

		&:hover
			background-color lighten(rgb(236, 197, 61),30)

		.fire-pop-count
			font-size 16px
			FONT-WEIGHT BOLD
			color #B50303


		.fire-pop-label
			font-size 10px

// Require any Map Content
@require '_modal'
@require '_loader'
@require '_alertsModal'
@require '_layerPanel'
@require '_controlPanel'
@require '_analysisPanel'
@require 'layerTransparency'
@require '_timeline'

// Media Queries for All Map Content
@media (min-width: 850px)
  .layout-content
    top 34px


.modal-content
  height auto
  width 100%
  outline none
  font-size 15px
  color #555555

.has-footer
  border-bottom 66px solid transparent

.current
  background-color #e7002f !important
  color white !important

.submit-success
  color #97bd3d

.submit-warning
  color #e7002f
  display inline-block
  padding-left 5px

.subscribe-container
  text-align center
  margin-top 20px

.subscribe-submit
  color #fff
  background #97bd3d

.subscribe-submit.btn
  position relative
  display inline-block
  z-index 1
  padding 0px 12px
  font-size 14px
  text-decoration none
  height 36px
  line-height 36px
  text-align center
  font-weight 500
  white-space nowrap
  -webkit-transition background 0.15s linear
  -moz-transition background 0.15s linear
  -o-transition background 0.15s linear
  transition background 0.15s linear
  -webkit-appearance none
  border 1px solid transparent
  outline none
  box-shadow none
  cursor pointer
  font-family "Fira Sans"

.subscribe-submit.btn:hover
  background #789631


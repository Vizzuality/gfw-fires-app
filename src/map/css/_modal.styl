.modal-wrapper
  overflow-x hidden
  overflow-y auto
  height 100%
  max-height 450px
  box-sizing border-box
  left 0
  top 0
  padding 20px

.calendar-wrapper
  overflow-x hidden
  overflow-y auto
  height 100%
  max-height 350px
  box-sizing border-box
  left 0
  top 0
  padding 15px

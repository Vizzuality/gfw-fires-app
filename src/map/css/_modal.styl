//- General modal styling

.modal-container
  position absolute
  z-index 1000
  height 100%
  width 100%
  left 0
  top 0

.modal-background
  background-color rgba(0, 0, 0, 0.35)
  height 100%
  width 100%

.calendar-background
  background-color rgba(0, 0, 0, 0)
  height 100%
  width 100%

.modal-window
  transform translate(-50%, -50%)
  background-color white
  position fixed
  height auto
  left 50%
  top 50%
  width 500px
  min-height 100px
  -webkit-transform translate(-50%, -60%)
  -moz-transform translate(-50%, -60%)
  -ms-transform translate(-50%, -60%)
  -o-transform translate(-50%, -60%)
  transform translate(-50%, -60%)
  transition all 0s cubic-bezier(0.445, 0.05, 0.55, 0.95)
  background white
  border none
  box-shadow 0px 1px 2px rgba(0,0,0,0.25)

.modal-window:before, .modal-window:after
  content ""
  position absolute
  height 20px
  width calc(100% - 8px)
  left 0

.modal-window a
  word-break break-word
  word-wrap break-word
  text-decoration none

.modal-window:before
  top 0
  background-image -webkit-linear-gradient(to-top, #fff, rgba(255,255,255,0))
  background-image -moz-linear-gradient(to-top, #fff, rgba(255,255,255,0))
  background-image -o-linear-gradient(to-top, #fff, rgba(255,255,255,0))
  background-image -ms-linear-gradient(to-top, #fff, rgba(255,255,255,0))
  background-image linear-gradient(to-top, #ffffff,rgba(255,255,255,0))

.calendar-window
  transform translate(-50%, -50%)
  background-color white
  position fixed
  height auto
  right 220px
  top 318px
  width 340px
  min-height 100px
  -webkit-transform translate(-50%, -60%)
  -moz-transform translate(-50%, -60%)
  -ms-transform translate(-50%, -60%)
  -o-transform translate(-50%, -60%)
  transform translate(-50%, -60%)
  transition all 0s cubic-bezier(0.445, 0.05, 0.55, 0.95)
  background white
  border none
  box-shadow 0px 1px 2px rgba(0,0,0,0.25)

.calendar-window:before, .calendar-window:after
  content ""
  position absolute
  height 20px
  width calc(100% - 8px)
  left 0

.calendar-window a
  word-break break-word
  word-wrap break-word
  text-decoration none

.calendar-window .kalendae
  background white
  font-size 16px
  padding 0
  margin 0
  width calc(100% - 8px)

.calendar-window .kalendae .k-calendar, .calendar-window .kalendae .k-title, .calendar-window .kalendae .k-header, .calendar-window .kalendae .k-days
  width 100%
  font-family 'Fira Sans', Georgia, serif

 .calendar-window .kalendae .k-header
  margin-bottom 10px
  border-bottom 1px solid #e5e5df

.calendar-window .kalendae .k-caption
  font-size 16px

.calendar-window .kalendae .k-header span
  width 40px
  font-weight normal

.calendar-window .kalendae .k-days span
  width 34px
  border none
  text-align center
  padding 5px 3px 5px 3px

.calendar-window .kalendae .k-days span.k-selected, .calendar-window .kalendae .k-days span.k-selected.k-active
  border none
  background #eee

.calendar-window .kalendae .k-days span.k-in-month.k-active
  color #e7002f

.calendar-window .kalendae .k-days span.k-active:hover
  border none
  bacground #eee

.modal-window:before
  top 0
  background-image -webkit-linear-gradient(to-top, #fff, rgba(255,255,255,0))
  background-image -moz-linear-gradient(to-top, #fff, rgba(255,255,255,0))
  background-image -o-linear-gradient(to-top, #fff, rgba(255,255,255,0))
  background-image -ms-linear-gradient(to-top, #fff, rgba(255,255,255,0))
  background-image linear-gradient(to-top, #ffffff,rgba(255,255,255,0))

.close-icon
  position absolute
  height 40px
  width 40px
  right 0
  top 0

.modal .close-icon svg
  transform translate(-50%, -50%)
  position absolute
  height 50%
  width 50%
  left 50%
  top 50%

.modal-close
  display block
  position absolute
  top 0px
  right 0px
  width 40px
  height 40px
  z-index 20



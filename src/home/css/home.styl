@require 'jeet'
@require '_shame'
@require '../../css/_variables'
@require '../../css/_utilities'

.action-menu
  @extend .back-charcoal
  padding 1em 0em

.action-menu__item
  column(1/3, gutter: $gutter)
  color $white
  text-align center

  &__icon
    &--alerts
    &--analysis
    &--social
      background-image url('../../images/home-icons.png')
      background-repeat no-repeat
      height 92px
      margin 20px auto

    &--alerts
      background-position 0px -740px
      width 122px

    &--analysis
      background-position 0px -400px
      width 150px

    &--social
      background-position 0px -540px
      width 134px

  &__title
    @extend .georgia
    font-size 1.5em
    margin-bottom .5em

  &__description
    @extend .text-smoke
    min-height 3em
    margin-bottom .5em

  +below($mqMobile)
    stack()

.button--green
  color $white
  font-size .7em
  font-weight bold
  border 1px solid $lime
  border-radius 2px
  background-color $lime
  padding 1em 2.5em
  margin-bottom 1em


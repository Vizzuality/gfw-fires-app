@require '_variables'
@require '../../node_modules/rupture/rupture/index'

h2
  font-size 47px
  font-weight 300
  margin 0
  padding 0 0 15px
  line-height 47px

h3
  font-size 19px
  font-weight 300
  margin 0
  padding 0 0 10px
  line-height 1.25em

.content-header
  margin 2em 0em
  color #FFF

.content-container
  display flex
  flex-direction row

  +below($mq-mobile)
    flex-direction column

.content-aside
  padding 1em

.content-menu
  width 270px

.content-body
  padding 1em

.content-subpage
  display none

  &.active
    display block

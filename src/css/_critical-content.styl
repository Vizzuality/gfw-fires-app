@require '_variables'
@require '../../node_modules/rupture/rupture/index'

h2
  font-size 47px
  font-weight 300
  margin 0
  padding 0 0 15px
  line-height 47px

h3
  font-size 19px
  font-weight 300
  margin 0
  padding 0 0 10px
  line-height 1.25em

.content-header
  margin 2em 0em
  color #FFF

.content-container
  display flex
  flex-direction row

  +below($mq-mobile)
    flex-direction column

.content-aside
  padding 1em 0 1em 1em

  li
    text-align center
    color #555555
    background #f7f7f7
    position relative
    font-weight 500
    font-size 14px
    padding 21px 10px
    line-height 1.25
    border-top 1px solid #e5e5df
    border-left 1px solid #e5e5df

    &.active
      background #fff
      box-shadow 2px 0 0 0px #FFF

    &.active:after
      content ""
      position absolute
      display block
      bottom 0%
      left 0px
      width 100%
      height 4px
      background rgba(151,189,61,0.5)

    +below($mq-mobile)
      border-right 1px solid #e5e5df
      box-shadow none

  li:last-child
    border-bottom 1px solid #e5e5df

.content-menu
  width 270px

  +below($mq-mobile)
    width 100%

.content-body
  padding 2em 2em 1em 2em
  border-left 1px solid #e5e5df
  color #555555

  +below($mq-mobile)
    border-left none

  h2
    padding 0
    font-size 35px

  p
    font-size 14px
    line-height 1.5
    padding 10px 0 0
    margin 0

.content-subpage
  display none

  &.active
    display block

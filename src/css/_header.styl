.headerGfw
  min-height 34px

  +below($mqMobile)
    min-height 0px

.navigation-container
  background-color rgba(255, 255, 255, 0.8)
  width 100%
  z-index $zNavigation

  +below($mqMobile)
    display none

.navigation
  text-align right

  &--link
    display inline-block
    text-decoration none
    padding 1em 2em
    margin 0em .5em
    color #555555
    transition all 0.2s cubic-bezier(0.645, 0.045, 0.355, 1)
    border-bottom 5px solid transparent

    &.active
    &:hover
    &:active
    &:focus
      //border-bottom 5px solid $gfwBlue
      border-bottom 5px solid #e7002f

    &:hover
    &:active
    &:focus
      background-color white
      box-shadow 0px 1px 3px rgba(0,0,0,0.25)

.logo-container
  position relative
  z-index $zLogo

.gfw-fires-logo
  position absolute

.gfw-fires-logo-beta
  position absolute
  top 80px
  left 81px

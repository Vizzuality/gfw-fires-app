div#map-view(class="map-view")
	div#control-panel(class="control-panel")
		div#fires-map-accordion
			div#fires-panel(class='accordion-panel')
				div
					input#fires-checkbox(type="checkbox", checked="checked")
					label(for="fires-checkbox", data-bind="text: firesCheckbox")
				div#active-fires-options
					div#firesWeek(class="active-fires-options selected-fire-option", data-bind="text: firesWeek")
					div#fires72(class="active-fires-options", data-bind="text: fires72")
					div#fires48(class="active-fires-options", data-bind="text: fires48")
					div#fires24(class="active-fires-options", data-bind="text: fires24")
					div(class="confidence-fires-container")
						input#confidence-fires-checkbox(type="checkbox", class="fires-confidence-checkbox")
						label(for="confidence-fires-checkbox", data-bind="text: confidenceFiresCheckbox")
			div#forest-use-panel(class='accordion-panel')
				div
			div#conservation-panel(class='accordion-panel')
				div
			div#land-cover-panel(class='accordion-panel')
				div
			div#air-quality-panel(class='accordion-panel')
				div
			div#imagery-panel(class='accordion-panel')
				div
			div#social-media-panel(class='accordion-panel')
				div
	div#map-container(class="map-container")
		div#map(class="map")
			div#esri-geocoder-widget
			div#legend-widget-container(class="legend-widget-container")
				div#legend-widget-title(class="legend-widget-title")
					span(data-bind="text: legend")
				div#legend-content(class="legend-content")
					div#legend
			div#locator-widget-button(class="locator-widget-button")
			div#basemap-gallery-button(class="basemap-gallery-button")
			div#share-button(class="share-button")
			div#locator-linker(class="locator-linker modal-link", data-bind="visible: showLocatorWidgets()")
			div#locator-widget-container(class="locator-widget-container", data-bind="visible: showLocatorWidgets()")
				div#locator-container-header(class="locator-container-header", data-bind="text: locatorContainerHeader")
				hr(class="locator-line-splitter")
				div#location-widget(class="location-widget")
				hr(class="locator-line-splitter")
				div#goto-area-search(class="goto-area-search", data-bind="text: locatorSearchLabel")
				span#clear-search-pins(class="clear-search-pins", data-bind="text: clearSearchPins, visible: showClearPinsOption()")
				div#area-search-options-1(class="area-search-radio-container")
					input#dms-search(type="radio", name="search-option", checked="true")
					label(for="dms-search", data-bind="text: dmsSearch", class="search-option-label")
				div#area-search-options-2(class="area-search-radio-container")
					input#lat-long-search(type="radio", name="search-option")
					label(for="lat-long-search", data-bind="text: latLongSearch", class="search-option-label")
				div#area-search-inputs(class="area-search-inputs")
					div#dms-inputs(class="dms-inputs-container", data-bind="visible: showDMSInputs()")
						table
							tr
								td
								td(data-bind="text: degreesLabel")
								td(data-bind="text: minutesLabel")
								td(data-bind="text: secondsLabel")
							tr
								td(data-bind="text: latitudeLabel")
								td
									input#degreesLatInput(type="text",class="dms-inputs")
								td
									input#minutesLatInput(type="text",class="dms-inputs")
								td
									input#secondsLatInput(type="text",class="dms-inputs")
							tr
								td(data-bind="text: longitudeLabel")
								td
									input#degreesLonInput(type="text",class="dms-inputs")
								td
									input#minutesLonInput(type="text",class="dms-inputs")
								td
									input#secondsLonInput(type="text",class="dms-inputs")
					div#lat-long-inputs(class="lat-long-inputs-container", data-bind="visible: showLatLongInputs()")
						table
							tr
								td(data-bind="text: latitudeLabel")
								td
									input#latitudeInput(type="text",class="lat-long-inputs")
							tr
								td(data-bind="text: longitudeLabel")
								td
									input#longitudeInput(type="text",class="lat-long-inputs")
					div(class="search-option-button-container")
						div#search-option-go-button(class="search-option-go-button", data-bind="text: searchOptionGoButton")
			div#basemap-linker(class="basemap-linker modal-link", data-bind="visible: showBasemapGallery()")
			div#basemap-gallery-container(class="basemap-gallery-container", data-bind="visible: showBasemapGallery()")
				div#basemap-gallery(class="basemap-gallery")
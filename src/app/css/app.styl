html, body, .app
    background-color #FFF
    height 100%
    width 100%
    margin 0
    font-family "Helvetica Neue",Helvetica,Arial,sans-serif

#stackContainer
  width 100%
  height 100%

#app-header
  height 210px
  background url('../images/header_tree_background.png') repeat-x scroll center top transparent
  border-bottom 1px solid #717D80
  box-shadow 0px 0px 10px rgba(0, 0, 0, 0.5)
  box-sizing border-box

#app-header.small
  height 100px
  
#app-body
  height 100%
  width 100%

#app-footer
  height 480px
  width 100%

#app-footer.small
  height 180px

.errorMsg
  position absolute
  top 10px
  border 1px solid black
  background-color yellow
  color red
  z-index 1000
  padding 3px
  text-align center
  width 300px
  left 50%
  margin-left -150px

.blocker
  background-color yellow
  opacity 0.2
  position absolute
  top 0
  bottom 0
  left 0
  right 0
.homeBgContainer
	width 100%
	height 100%
	overflow hidden	

.homeBgContainer img
	width 100%
	height auto
//	background url('../images/home-bg.jpg') no-repeat scroll 0px 0px / 100% auto #000
.homeModeOptionsContainer
	position absolute
	width 100%
	height 100%

.homeModeOptionsViewerOuter
	width 350px
	height 350px
	z-index 100
	//overflow hidden
	overflow-x auto
	overflow-y hidden
	margin auto
	margin-top 50px
	overflow visible


/*.homeModeOptionsViewerInner
	width 250px
	height 250px
	z-index 100
	overflow hidden*/

.homeModeOptionsViewerOuter .modeGroup
	height 350px
	width 100%
	transition display 1.5s ease
	cursor pointer
	
	font-size 20px

	
.homeModeOptionsViewerOuter .modeOption
	border-radius 175px
	background-color #000
	color #FFF
	height 350px
	width 350px
	vertical-align middle
	text-align center
	position absolute
	//display inline-block
	margin auto
	opacity 0.3
	box-sizing border-box



.homeModeOptionsViewerOuter .modeOptionRing
	border-radius 175px
	background none
	height 350px
	box-shadow 0px 0px 14px 0px #888888
	width 350px
	vertical-align middle
	text-align center
	position absolute
	//display inline-block
	margin auto
	border 10px solid #EC1D38
	box-sizing border-box

.homeModeOptionsViewerOuter .modeGroup .modeText p
	font-size 72px
	color #EC1D38
	margin-top -50px
	margin-bottom 0px

.homeModeOptionsViewerOuter .modeGroup .modeText
	font-family "Georgia",serif
	color #CCC
	position absolute
	left 0px
	top 140px
	right 0px
	vertical-align middle

.homeModeOptionsViewerOuter .modeGroup .modeText span
	font-size 32px

.homeModeOptionsViewerOuter .modeGroup .modeText span.more-text
	position relative
	top -20px

#signUpAlertsForm
	font-family "Arial MT Condensed Light"
	src url("../fonts/ArialMTStd-LightCond.otf") format("opentype")

#signUpAlertsForm #aoiSubDistrictPicker
	font-size 12px
	width 240px

#signUpAlertsForm input[type="email"], #signUpAlertsForm input[type="tel"]
	border-radius 5px
	width 235px
	height 20px

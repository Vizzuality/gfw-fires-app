.homeModeOptionsViewerOuter .modeGroup
	height 350px
	width 100%
	transition display 1.5s ease
	cursor pointer
	font-family "Georgia",serif
	font-size 20px

.homeModeOptionsViewerOuter .modeGroup pointer p
	font-size 32px

	
.homeModeOptionsViewerOuter .modeOption
	border-radius 175px
	background-color #000
	color #FFF
	height 350px
	width 350px
	line-height 300px
	vertical-align middle
	text-align center
	position absolute
	//display inline-block
	margin auto
	opacity 0.3
	box-sizing border-box



.homeModeOptionsViewerOuter .modeOptionRing
	border-radius 175px
	background none
	height 350px
	color #FFF
	box-shadow 0px 0px 14px 0px #888888
	width 350px
	line-height 300px
	vertical-align middle
	text-align center
	position absolute
	//display inline-block
	margin auto
	border 10px solid #EC1D38
	box-sizing border-box
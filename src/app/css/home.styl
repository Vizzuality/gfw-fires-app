.homeBgContainer
	width 100%
	height 100%
	overflow hidden	

.homeBgContainer img
	width 100%
	height auto
//	background url('../images/home-bg.jpg') no-repeat scroll 0px 0px / 100% auto #000
.homeModeOptionsContainer
	position absolute
	width 100%
	height 100%

.homeModeOptionsViewerOuter
	width 350px
	height 350px
	z-index 100
	//overflow hidden
	overflow-x auto
	overflow-y hidden
	margin auto
	margin-top 50px
	overflow visible


/*.homeModeOptionsViewerInner
	width 250px
	height 250px

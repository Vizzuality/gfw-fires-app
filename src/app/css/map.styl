// General Functions
border-radius()
	-webkit-border-radius arguments
	-moz-border-radius arguments
	border-radius arguments

// Map Css
.map-view
	height 100%
	width 100%
	position relative
.control-panel
	position absolute
	width 320px
	bottom 0
	left 0
	top 0 
.map-container
	position absolute
	left 320px
	bottom 0
	right 0
	top 0
.map 
	height 100%
	width 100%
.HomeButton .home
	padding 0
	border-radius(0)

.locator-widget-button, .basemap-gallery-button, .share-button
	border 1px solid #444
	border-radius(5px)
	position absolute
	cursor pointer
	height 30px
	width 30px
	right 20px
	z-index 50

.modal-link 
	background-color white
	position absolute
	height 30px
	width 30px
	right 45px
	z-index 49

.locator-widget-button
	background url('../images/locate.png') no-repeat center -2px white
	top 120px

.locator-linker
	top 120px

.basemap-gallery-button
	background url('../images/basemap.png') no-repeat center -2px white
	top 160px

.basemap-linker
	top 160px

.basemap-gallery-container, .locator-widget-container
	background-color white
	border-radius(5px)
	position absolute
	height 300px
	width 300px
	z-index 50
	right 70px
	top 20px

.basemap-gallery-container
	overflow-y auto

.share-button
	background url('../images/ico-share.png') no-repeat center white
	top 200px

.locator-line-splitter
	text-align center
	width 290px

.locator-container-header
	margin 5px 0 0 5px
	font-weight bold
	font-size 18px

.LocateButton
	margin 0 5px

.LocateButton span
	display block !important
	text-align center
	font-weight bold
	line-height 25px
	font-size 14px
	color white

.LocateButton .zoomLocateButton
	background #555
	height 25px
	width 100px

.LocateButton .zoomLocateButton:hover
	background red

.area-search-inputs
	margin 5px

.dms-inputs
	height 20px
	width 60px

.lat-long-inputs
	height 20px

.area-search-radio-container
	margin 2px 5px

.goto-area-search
	display inline-block
	margin 5px

.clear-search-pins
	text-decoration underline
	cursor pointer
	float right
	margin 5px
	color blue

.search-option-button-container
	text-align center
	position absolute
	bottom 10px
	left 100px

.search-option-go-button
	background-color #444
	display inline-block
	border-radius(5px)
	font-weight bold
	margin 10px auto
	cursor pointer
	padding 3px 0
	width 100px
	color white

.search-option-go-button:hover
	background-color red
	
